{% extends 'base.html.twig' %}

{% block title %}Pagina amministratore{% endblock %}

{% block body %}

    <div class="background">
        <img src="{{ asset('img/background.png') }}" alt="background" class="background">
    </div>

    <div class="content">

        <h2>Scegli le modifiche che vuoi fare</h2>
        <div class="pulsanti">
            <a href="{{ path('app_homepage') }}" class="pulsante">Indietro</a>
            <a href="{{ path('api_admin_users') }}" class="pulsante">Utenti</a>
            <a href="" class="pulsante pulsante-corrente">Materiali</a>
        </div>


        <br>
        <div id="opzioni-modifica-materiali">
        <h1>Modifica tabella materiale</h1>
        <!-- Form per aggiungere utente -->
        <div class="wrapper">
            <form action="{{ path('api_addMaterial') }}" method="post">
                <h4 style="margin-bottom: 10px;">Aggiungi materiale</h4>
                <!-- Input per il nome utente -->
                <div class="input-box">
                    <input type="text" id="type" name="type" placeholder="Type" required>
                    <i class='bx bxs-user'></i>
                </div>

                <!-- Input per la password -->
                <div class="input-box">
                    <input type="text" id="name" name="name" placeholder="Name" required>
                    <i class='bx bxs-lock-alt'></i>
                </div>

                <div class="input-box">
                    <input type="text" id="thickness" name="thickness" placeholder="Thickness">
                    <i class='bx bxs-user'></i>
                </div>

                <div class="input-box">
                    <input type="text" id="full_pallet" name="full_pallet" placeholder="Full pallet">
                    <i class='bx bxs-user'></i>
                </div>

                <div class="input-box">
                    <input type="text" id="price" name="price" placeholder="Price" required>
                    <i class='bx bxs-user'></i>
                </div>

                <!-- Bottone di submit -->
                <button type="submit" class="btn">Aggiungi materiale</button>
            </form>

            {% for message in app.flashes('successAdd') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}

            {% for message in app.flashes('errorAdd') %}
                <div class="alert alert-danger">
                    {{ message }}
                </div>
            {% endfor %}
        </div>

        <br><br>

        <!-- Form per rimuovere utente -->
        <div class="wrapper">
            <form action="{{ path('api_delMaterial') }}" method="post">
                <h4 style="margin-bottom: 10px;">Rimuovi materiale</h4>
                <div class="input-box">
                    <input type="text" id="id" name="id" placeholder="Id materiale" required>
                    <i class='bx bxs-user'></i>
                </div>
                <!-- Bottone di submit -->
                <button type="submit" class="btn">Rimuovi Materiale</button>
            </form>

            {% for message in app.flashes('successDel') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}

            {% for message in app.flashes('errorDel') %}
                <div class="alert alert-danger">
                    {{ message }}
                </div>
            {% endfor %}
        </div>

        <!-- Form per modificare utente -->
        <div class="wrapper">
            <form action="{{ path('api_modiMaterial') }}" method="POST">
                <h4 style="margin-bottom: 10px;">Modifica materiale</h4>
                <!-- Input per il nome utente -->
                <div class="input-box">
                    <label> inserire l'id del materiale da modificare</label>
                    <input type="text" id="id" name="id" placeholder="Id materiale" required>
                    <i class='bx bxs-user'></i>
                </div>

                <div class="input-box">
                    <label> inserire il nuovo spessore</label>
                    <input type="text" id="thickness" name="thickness" placeholder="Thickness">
                    <i class='bx bxs-user'></i>
                </div>

                <div class="input-box">
                    <label> inserire il nuovo pallet</label>
                    <input type="text" id="pallet" name="pallet" placeholder="Pallet">
                    <i class='bx bxs-user'></i>
                </div>

                <div class="input-box">
                    <label> inserire il nuovo prezzo</label>
                    <input type="text" id="price" name="price" placeholder="Price">
                    <i class='bx bxs-user'></i>
                </div>

                <!-- Bottone di submit -->
                <button type="submit" class="btn">Modifica materiale</button>
            </form>

            {% for message in app.flashes('successModi') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}

            {% for message in app.flashes('errorModi') %}
                <div class="alert alert-danger">
                    {{ message }}
                </div>
            {% endfor %}

        </div>
        </div>
    </div>

    <div id="opzioni-modifica-materiali" style="display: none;">
        <h1>Modifica tabella materiali</h1>
        <!-- Form per aggiungere materiale -->

{%  endblock %}

{% block javascripts %}

{% endblock %}

{%  block stylesheets %}
    <style>
        /* Stile per il body */
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        /* Stile per il contenitore del background */
        .background {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-size: cover;
            background-position: center;
            filter: blur(4px);
            transform: scale(1.1);
            z-index: -1;
        }

        /* Stile per il contenitore del contenuto */
        .content {
            position: relative;
            z-index: 1;
            background: rgba(128, 114, 96, 0.4);
            border: 2px solid rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(9px);
            color: #fff;
            border-radius: 12px;
            padding: 30px 40px;
            margin: auto; /* Aggiunto per centrare il contenuto */
            max-width: 600px; /* Aggiunto per limitare la larghezza del contenuto */
            animation: fadeIn 1s ease-in-out; /* Aggiunto effetto di fade iniziale più corto */
        }

        /* Stile per il titolo */
        h2 {
            color: white;
            font-size: 24px; /* Esempio di dimensione del font più grande */
            text-align: center; /* Centra il testo */
        }

        /* Stile per le opzioni */
        select, input, button {
            margin-bottom: 30px; /* Aumenta lo spazio tra gli elementi */
            background-color: rgba(0, 0, 0, 0.5);
            color: white;
            border: none;
            padding: 10px;
            border-radius: 5px;
        }

        /* Stile per i pulsanti */
        button {
            cursor: pointer;
            background-color: rgba(0, 0, 0, 0.5);
            color: white;
            border: none;
            padding: 10px 20px; /* Aumenta il padding per rendere i pulsanti più grandi */
            border-radius: 5px;
            transition: background-color 0.3s; /* Aggiunge una transizione al cambiamento del colore di sfondo */
        }

        button:hover {
            background-color: rgba(0, 0, 0, 0.7);
        }

        .pulsanti {
          display: flex;
          justify-content: space-between; /* Distribuisce gli elementi flexbox con spaziatura tra di essi */
          align-items: center;
          /* Aggiungi altri stili desiderati per il contenitore, come margini o padding */
        }

        .pulsante {
          /* Stile per i singoli pulsanti */
          padding: 10px 20px;
          background-color: rgba(0, 0, 0, 0.5);
          color: white;
          text-decoration: none;
          border-radius: 5px;
          cursor: pointer;
          transition: background-color 0.3s;
        }

        .pulsante:hover {
          background-color: rgba(0, 0, 0, 0.7);
        }

        .pulsante-corrente {
          background-color: rgba(0, 0, 0, 0.5);
          color: white;
          border: 2px solid white;
          pointer-events: none
        }

        /* Aggiungi animazione di fade */
        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }

    </style>
{% endblock %}