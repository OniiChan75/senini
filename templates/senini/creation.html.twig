{% extends 'base.html.twig' %}

{% block title %}Pagina di preventivo{% endblock %}

{% block body %}
    <div class="">
        <img src="{{ asset('img/background.png') }}" alt="" class="background">
    </div>

    <div class="content">

        <h2>Scegli il tipo di costruzione</h2>
        <select id="tipo-costruzione" onchange="showOptions()">
            <option value="nuova-costruzione">Nuova costruzione</option>
            <option value="costruzione-esistente">Costruzione esistente</option>
        </select><br>

        <form id="inserimento" action="{{ path('api_analyzeForm') }}" method="post">


            <div id="opzioni-nuova-costruzione">
                <h3>Nuova costruzione</h3>
                <!-- muratura di temponamento -->
                <h3>Muratura di tamponamento</h3>
                <label for="superficieTamponamento">Superficie (mq):</label>
                <input type="text" id="superficieTamponamento" name="superficieTamponamento"><br>
                <label for="spessoreBloccoAmbiente">Spessore Blocco Ambiente (cm):</label>
                <input type="text" id="spessoreBloccoAmbiente" name="spessoreBloccoAmbiente"><br>
                <label for="sceltaMaltaTamponamento">Scelta Malta:</label>
                <select name="sceltaMaltaTamponamento" id="sceltaMaltaTamponamento">
                    <option value="maltaPronta">Malta Pronta</option>
                    <option value="maltaMix">Malta Mix</option>
                </select><br>

                <!-- ciclo di intonaco e finitura su tamponamento -->
                <h3>Ciclo di intonaco e finitura su tamponamento</h3>
                <label for="sceltaIntonacoTamponamento">Scelta Intonaco:</label>
                <select name="sceltaIntonacoTamponamento" id="sceltaIntonacoTamponamento">
                    <option value="alCivileInterno">Al Civile Interno: ICN e Malta Fine</option>
                    <option value="alCivileEsterno">Al Civile Esterno: ICN e SNT+</option>
                    <option value="intonacoMaterico">Intonaco a Civile e Rasatura Materica (Interno/Esterno): ICN
                        +Canapulino</option>
                    <option value="intonacoCanaposo">Intonaco a Civile e Rasatura Materica (Interno): ICN + Canaposo
                    </option>
                    <option value="intonacoBB500">Intonaco di Corpo Materico (Interno/Esterno): BB 500 Venezia</option>
                </select><br>

                <!-- tavoli divisori -->
                <h3>Tavolati divisori</h3>
                <label for="materiale">Materiale:</label>
                <select name="materiale" id="materiale">
                    <option value="bloccoAmbiente">Blocco Ambiente</option>
                    <option value="doppiaLastra">Doppia lastra gessofibra + canafiber</option>
                </select><br>
                <label for="superficieTavoliDivisori">Superficie:</label>
                <input type="text" id="superficieTavoliDivisori" name="superficieTavoliDivisori"><br>
                <label for="spessoreTavoliDivisori">Spessore:</label>
                <input type="text" id="spessoreTavoliDivisori" name="spessoreTavoliDivisori"><br>
                <div id="bloccoAmbiente">
                    <label for="maltaTavDiv">Scelta malta</label>
                    <select name="maltaTavDiv" id="maltaTavDiv">
                        <option value="maltaPronta">Malta Pronta</option>
                        <option value="maltaMix">Malta Mix</option>
                    </select><br>
                </div>
                <div id="doppiaLastra" style="display: none;">
                    <label for="spessoreCanafiber">Spessore canafiber</label>
                    <input type="text" id="spessoreCanafiber" name="spessoreCanafiber"><br>
                    <label for="superficieCanafiber">Superficie canafiber</label>
                    <input type="text" id="superficieCanafiber" name="superficieCanafiber"><br>
                </div>

                <!-- ciclo di intonaco e finitura su tavoli divisori -->
                <h3>Ciclo di intonaco e finitura su tavoli divisori</h3>
                <label for="sceltaIntonacoTavoliDivisori">Scelta Intonaco:</label>
                <select name="sceltaIntonacoTavoliDivisori" id="sceltaIntonacoTavoliDivisori">
                    <option value="1">Al civile interno: ICN e Malta Fine</option>
                    <option value="2">Intonaco a civile e rasatura materica: ICN + Canapulino</option>
                    <option value="3">Intonaco a civile e rasatura materica: ICN + Canaposo</option>
                    <option value="4">Intonaco di corpo materico: BB 500 Venezia</option>
                </select><br>

                <!-- isolamento copertura -->
                <h3>Isolamento copertura</h3>
                <label for="superficieIsolamentoCopertura">Superficie:</label>
                <input type="text" id="superficieIsolamentoCopertura" name="superficieIsolamentoCopertura"><br>
                <label for="spessoreIsolamentoCopertura">Spessore:</label>
                <input type="text" id="spessoreIsolamentoCopertura" name="spessoreIsolamentoCopertura"><br>

                <!-- isolamento sottofondo -->
                <h3>Isolamento sottofondo</h3>
                <label for="superficieIsolamentoSottofondo">Superficie:</label>
                <input type="text" id="superficieIsolamentoSottofondo" name="superficieIsolamentoSottofondo"><br>
                <label for="spessoreIsolamentoSottofondo">Spessore:</label>
                <input type="text" id="spessoreIsolamentoSottofondo" name="spessoreIsolamentoSottofondo"><br>

            </div>


            <div id="opzioni-costruzione-esistente" style="display: none;">
                <h3>Costruzione esistente</h3>
                <!-- controparete esterna -->
                <h3>Controparete esterna</h3>
                <label for="superficieContropareteEsterna">Superficie:</label>
                <input type="text" id="superficieContropareteEsterna" name="superficieContropareteEsterna"><br>
                <label for="controparteEsterna">Scelta tra:</label>
                <select name="controparteEsterna" id="controparteEsterna">
                    <option value="controparteEsterna1">Solo blocco ambiente</option>
                    <option value="controparteEsterna2">Blocco ambiente + canafiber</option>
                    <option value="controparteEsterna3">Blocco ambiente + bio beton pronto</option>
                </select><br>
                <div id="controparteEsterna1">
                    <label for="spessoreBA">Spessore blocco ambiente:</label>
                    <input type="text" id="spessoreBA" name="spessoreBA"><br>
                </div>
                <div id="controparteEsterna2" style="display: none;">
                    <label for="spessoreBA">Spessore blocco ambiente:</label>
                    <input type="text" id="spessoreBA" name="spessoreBA"><br>
                    <label for="spessoreCanafiber">Spessore canafiber:</label>
                    <input type="text" id="spessoreCanafiber" name="spessoreCanafiber"><br>
                </div>
                <div id="controparteEsterna3" style="display: none;">
                    <label for="spessoreBA">Spessore blocco ambiente:</label>
                    <input type="text" id="spessoreBA" name="spessoreBA"><br>
                    <label for="spessoreBioBeton">Spessore bio beton pronto:</label>
                    <input type="text" id="spessoreBioBeton" name="spessoreBioBeton"><br>
                </div>

                <!-- isolamento copertura esistente -->
                <h3>Isolamento copertura esistente</h3>
                <label for="superficieIsolamentoCoperturaEsistente">Superficie:</label>
                <input type="text" id="superficieIsolamentoCoperturaEsistente"
                       name="superficieIsolamentoCoperturaEsistente"><br>
                <label for="spessoreIsolamentoCoperturaEsistente">Spessore:</label>
                <input type="text" id="spessoreIsolamentoCoperturaEsistente"
                       name="spessoreIsolamentoCoperturaEsistente"><br>

                <!-- isolamento sottofondo esistente -->
                <h3>Isolamento sottofondo esistente</h3>
                <label for="superficieIsolamentoSottofondoEsistente">Superficie:</label>
                <input type="text" id="superficieIsolamentoSottofondoEsistente"
                       name="superficieIsolamentoSottofondoEsistente"><br>
                <label for="spessoreIsolamentoSottofondoEsistente">Spessore:</label>
                <input type="text" id="spessoreIsolamentoSottofondoEsistente"
                       name="spessoreIsolamentoSottofondoEsistente"><br>

            </div>

            <button type="submit" id="confermaAggiunta" class="btn">Conferma aggiunte</button>

        </form>

    </div>
{% endblock %}

